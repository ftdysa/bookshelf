{% extends 'base.html.twig' %}
{% form_theme form 'form/bulma.html.twig' %}

{% block body %}
{{ form_start(form) }}
{{ form_row(form.author.name, {label: "Author(s) Name"}) }}
{{ form_row(form.book.name, {label: "Book Name"}) }}
{{ form_row(form.comment) }}

<div class="field">
    {{ form_label(form.dateRead) }}
</div>
<div class="field is-grouped">
    {{ form_widget(form.dateRead) }}
</div>

<div class="field is-grouped is-grouped-right">
    <p class="control">
        <button class="button is-primary">
            Submit
        </button>
    </p>
    <p class="control">
        <a class="button is-light" href="/">
            Cancel
        </a>
    </p>
</div>
{{ form_end(form) }}
{% endblock %}
